@model IList<ImageSharingWithCloudStorage.Models.SelectItemViewModel>
@{
    ViewBag.Title = "Deactivate User";
}

<h2>@ViewBag.Title</h2>
<p style="font-weight:bold;color:blue">
    @ViewBag.Message
</p>
<br />
@using (Html.BeginForm("Deactivate", "Account", FormMethod.Post))
{
    <fieldset>
        @Html.AntiForgeryToken()

        <table border="1">
            <thead>
                <tr>
                    <th>Deactivate</th>
                    <th>UserName</th>
                </tr>
            </thead>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(x => x[i].Id)
                        @Html.CheckBoxFor(x => x[i].IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].UserName)
                    </td>
                </tr>
            }
        </table>
        <br />
        <input type="submit" value="Submit" />
    </fieldset>
}