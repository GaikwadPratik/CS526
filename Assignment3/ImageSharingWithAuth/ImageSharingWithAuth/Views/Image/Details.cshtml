@model  ImageSharingWithAuth.Models.ImageView

@{
    ViewBag.Title = "Image Details";
}

<h2>@ViewBag.Title</h2>

@if (Model != null)
{
    <p><img src="@Url.Content("~/Content/Images/img-" +@Model.Id+".jpg")" style="width:40%;height:50%" /></p>

    <p>Image id: @Model.Id</p>

    <p>Tag: @Model.TagName</p>

    <p>Caption: @Model.Caption</p>

    <p>Description: <br /> @Model.Description</p>

    <p>DateTaken: @Model.DateTaken.ToShortDateString()</p>

    <p>Uploader: @Model.UserId</p>
}
else
{
    <p>No Image found.</p>
}
